    .modal.fade#modSendMessage(tabindex="-1", role="dialog", aria-labelledby="Send Message", aria-hidden="true")
      .modal-dialog
        .modal-content
          .modal-header
            button.close(type="button", data-dismiss="modal", aria-hidden="true") &times;
            h4#modArticleLbl.modal-title Send Message
          .modal-body
            form(role='form', name='sendMessageForm')
              input(type='hidden')
              .form-group
                label(for='sendTitle') Title
                input.form-control#sendTitle(type="text", name="sendTitle", placeholder='Enter Title', size='60', ng-model="sendMessage.title", required)
              
              .form-group
                label(for='sendMessage') Message
                input.form-control#sendMessage(type="text", name="sendMessage", placeholder='Enter Message', size='60', ng-model="sendMessage.message", required)

              .form-group
                label(for='sendcustomMsg') Custom Message
                input.form-control#sendcustomMsg(type="text", name="sendcustomMsg", placeholder='Enter Custom Message', size='60', ng-model="sendMessage.customMessage", required)

          .modal-footer
            button.btn.btn-default(type="button", data-dismiss="modal") Close
            button.btn.btn-primary(type="button", ng-click='sendMsg()') Send
    
